{
  "version": 2,
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": { "distDir": "dist", "buildCommand": "npm run build" }
    },
    { 
      "src": "api/**/*.js", 
      "use": "@vercel/node",
      "config": {
        "nodeVersion": "22.x"
      }
    }
  ],
  "routes": [
    { "src": "/api/([^/]+)/(.*)", "dest": "/api/$1.js" },
    { "src": "/@vite/(.*)", "dest": "/@vite/$1" },
    { "src": "/@react-refresh", "dest": "/@react-refresh" },
    { "src": "/src/(.*)", "dest": "/src/$1" },
    { "src": "/node_modules/(.*)", "dest": "/node_modules/$1" },
    { "src": "/assets/(.*)", "dest": "/assets/$1" },
    { "src": "/(.*)", "dest": "/index.html" }
  ]
}
